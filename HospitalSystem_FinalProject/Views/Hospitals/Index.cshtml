@model IEnumerable<HospitalSystem_FinalProject.Models.Hospital>

@{
    ViewData["Title"] = "Index";
}

<h1>Hastaneler</h1>

<div class="row">
    <div class="col-md-12">
        <div class="float-right">
            <form asp-action="Index" method="get" class="form-inline">
                <div class="form-group mb-2">
                    <label for="SearchString" class="sr-only">Adres</label>
                    <input type="text" class="form-control" name="searchString" id="SearchString" placeholder="Adres" value="@ViewData["CurrentFilter"]" />
                </div>
                <button type="submit" class="btn btn-primary mb-2 ml-2">Ara</button>
            </form>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HospitalId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.HospitalId">Details</a> |

                    <a asp-action="Delete" asp-route-id="@item.HospitalId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>