@model IEnumerable<HospitalSystem_FinalProject.Models.Comment>

@{
    ViewData["Title"] = "Comments";
}

<h1>Comments for @ViewBag.DoctorName</h1>

<table class="table">
    <thead>
        <tr>
            <th>Content</th>
            <th>Rating</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => comment.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => comment.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => comment.CreatedAt)
                </td>
            </tr>
        }
    </tbody>
</table>
