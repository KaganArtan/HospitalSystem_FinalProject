@model IEnumerable<HospitalSystem_FinalProject.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Hospital.Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Specialization.Domain)</th>
            <th>Average Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var averageRating = item.Comments.Any() ? item.Comments.Average(c => c.Rating) : 0;
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Hospital.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Specialization.Domain)</td>
                <td>@averageRating</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DoctorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DoctorId">Details</a> |
                    <a href="javascript:void(0);" onclick="showCommentForm('@item.DoctorId')">Comment</a> |
                    <a href="javascript:void(0);" onclick="showComments('@item.DoctorId')">View Comments</a> |
                    <a asp-action="Delete" asp-route-id="@item.DoctorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Comment Form Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Add Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="commentFormContainer"></div>
            </div>
        </div>
    </div>
</div>

<!-- Comments Modal -->
<div class="modal fade" id="commentsModal" tabindex="-1" aria-labelledby="commentsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentsModalLabel">Comments</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="commentsContainer"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showCommentForm(doctorId) {
            $.get('/Doctors/Comment/' + doctorId, function (data) {
                $('#commentFormContainer').html(data);
                $('#commentModal').modal('show');
            });
        }

        function showComments(doctorId) {
            $.get('/Doctors/Comments/' + doctorId, function (data) {
                $('#commentsContainer').html(data);
                $('#commentsModal').modal('show');
            });
        }
    </script>
}
